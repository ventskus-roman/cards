<table class="table table-striped">
  <thead>
    <tr>
      <th>Текст</th>
      <th>Перевод</th>
      <th>Дата просмотра</th>
      <th>Редактировать</th>
      <th>Удалить</th>
    </tr>
  </thead>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d/%m/%y") %></td>
      <td><%= link_to "Редактировать", edit_card_path(card) %></td>
      <td><%= link_to "Удалить", card, method: :delete, data: 
                      { confirm: "Вы действительно хотите удалить карточку?" }%></td>
    </tr>
  <% end %>
</table>